{% extends 'base.html.twig' %}

{% block title %}Profile{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('css/profile-style-regowneruser.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('css/profileowner.css') }}">
{% endblock %}

{% block body %}
<main class="profile">
    <div class="profile-bg"></div>
    <section class="container">
        <aside class="profile-image">
            <div class="jp">
                <img src="{{ asset(profileImage) }}" alt="{{ cinemaowner.cinema.imagePath }}" height=100%
                width=100% style="margin-top: 30px;border-radius: 10px;margin-bottom: 30px;z-index: 0;position: relative">
            </div>
            <a class="edit" href="{{ url('regowner_settings') }}">
                Edit profile
            </a>
        </aside>
        <section class="profile-info">
            <h1 class="first-name">{{ cinemaowner.cinema.name }}</h1>
            <h1 class="second-name">owned by {{ cinemaowner.user.firstName }}</h1>
            <p class="proile-rating">Rating : <span>{{ rating }} / 5</span></p>
            <ul class="nav nav-tabs" id="myTab" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab"
                       aria-controls="home" aria-selected="true">About</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab"
                       aria-controls="profile" aria-selected="false">More</a>
                </li>
            </ul>
            <div class="row">
                <div class="col-md-8">
                    <br/>
                    <div class="tab-content profile-tab" id="myTabContent">
                        <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                            <div class="row">
                                <div class="col-md-4">
                                    <label>Name</label>
                                </div>
                                <div class="col-md-10">
                                    <p>{{ cinemaowner.user.lastName }} {{ cinemaowner.user.firstName }}</p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-4">
                                    <label>Email</label>
                                </div>
                                <div class="col-md-10">
                                    <p>{{ cinemaowner.user.email }}</p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-4">
                                    <label>Phone</label>
                                </div>
                                <div class="col-md-10">
                                    <p>{{ cinemaowner.cinema.phoneNumber }}</p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-4">
                                    <label>adress</label>
                                </div>
                                <div class="col-md-10">
                                    <p>{{ cinemaowner.cinema.adress }}</p>
                                </div>
                            </div>
                        </div>
                        <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="row">
                                        <div class="col-md-8">
                                            <label>Opening Time</label>
                                        </div>
                                        <div class="col-md-4">
                                            <p>{{ cinemaowner.cinema.openingTime|date('H:i') }}</p>
                                        </div>
                                    </div>
 {#                                   <div class="row">
                                        <div class="col-md-8">
                                            <label>Ticket Price </label>
                                        </div>
                                        <div class="col-md-4">
                                            <p>10$/hr</p>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-8">
                                            <label>Total Films Projected Today</label>
                                        </div>
                                        <div class="col-md-4">
                                            <p>dnf</p>
                                        </div>
                                    </div>#}
                                    <div class="row">
                                        <div class="col-md-8">
                                            <label>Closing Time</label>
                                        </div>
                                        <div class="col-md-4">
                                            <p>{{ cinemaowner.cinema.closingTime|date('H:i') }}</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </section>
        </section>
</main>
{% endblock %}
